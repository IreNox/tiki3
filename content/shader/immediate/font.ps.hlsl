
////////////////////////////////////////////////////////////////////////////////
// Type Defines
////////////////////////////////////////////////////////////////////////////////

Texture2D g_texture 	: register( t0 );
SamplerState g_sampler 	: register( s0 );

struct VertexToFragment
{
	float4 position	: SV_POSITION;
	float2 texcoord	: TEXCOORD;
};

////////////////////////////////////////////////////////////////////////////////
// Pixel Shader
////////////////////////////////////////////////////////////////////////////////

float4 PS_Main(VertexToFragment input) : SV_TARGET
{
	return float4( 1.0f, 1.0f, 1.0f, g_texture.Sample( g_sampler, input.texcoord ).r );
}

<Window x:Class="editor.source.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:editor="clr-namespace:editor.source"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:xcad="http://schemas.xceed.com/wpf/xaml/avalondock"
        xmlns:xcdg="http://schemas.xceed.com/wpf/xaml/datagrid"
        xmlns:s="clr-namespace:System;assembly=mscorlib"
        Title="MainWindow" Width="1600" Height="900" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="124"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- Tab Menu Navigation -->
        <TabControl AutomationProperties.AutomationId="Tabs" Grid.Row="0" Margin="5">
            <TabItem Header="File">
                <StackPanel Orientation="Horizontal" Margin="5">
                    <Button Name="Load" Content="Load" MinWidth="70" Margin="0, 0, 5, 0"/>
                    <Button Name="Save" Content="Save" MinWidth="70" Margin="0, 0, 5, 0"/>
                </StackPanel>
            </TabItem>
            <TabItem Header="Object Mode">
            </TabItem>
            <TabItem Header="Terrain Mode">
            </TabItem>
            <TabItem Header="Area Mode">
            </TabItem>
        </TabControl>

        <xcad:DockingManager AllowMixedOrientation="True" BorderBrush="Black" BorderThickness="0" Grid.Row="1">
            <xcad:DockingManager.DocumentHeaderTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{Binding IconSource}" Margin="0,0,4,0"/>
                        <TextBlock Text="{Binding Title}" />
                    </StackPanel>
                </DataTemplate>
            </xcad:DockingManager.DocumentHeaderTemplate>
            <xcad:LayoutRoot x:Name="_layoutRoot">
                <xcad:LayoutPanel Orientation="Horizontal">
                    <xcad:LayoutAnchorablePane DockWidth="200">
                        <xcad:LayoutAnchorable ContentId="properties" Title="Properties" CanHide="False" CanClose="False"
                                               AutoHideWidth="240">
                                               <!--IconSource="../Images/property-blue.png"-->
                            <xctk:PropertyGrid NameColumnWidth="110" SelectedObject="{Binding ElementName=_layoutRoot, Path=LastFocusedDocument.Content}">

                            </xctk:PropertyGrid>
                        </xcad:LayoutAnchorable>
                    </xcad:LayoutAnchorablePane>
                    <xcad:LayoutDocumentPaneGroup>
                        <xcad:LayoutDocumentPane>
                            <xcad:LayoutDocument ContentId="document1" Title="3D View" CanClose="False" >
                                <editor:RenderControl x:Name="RenderControl" />
                            </xcad:LayoutDocument>
                        </xcad:LayoutDocumentPane>
                    </xcad:LayoutDocumentPaneGroup >
                    <xcad:LayoutAnchorablePaneGroup DockWidth="200"  Orientation="Vertical">
                        <xcad:LayoutAnchorablePane>
                            <xcad:LayoutAnchorable ContentId="Assets" Title="Assets" >

                                <xcdg:DataGridControl x:Name="_dataGrid" AllowDrag="False" >
                                    <xcdg:DataGridControl.View>
                                        <xcdg:TableflowView FixedColumnCount="2" />
                                    </xcdg:DataGridControl.View>

                                    <xcdg:DataGridControl.Columns>
                                        <xcdg:Column FieldName="Name" Title="Name" Width="100" IsMainColumn="True" />
                                        <xcdg:Column FieldName="ID" Title="ID" Width="100" />
                                        <xcdg:Column FieldName="Template" Title="Template" Width="100"/>
                                    </xcdg:DataGridControl.Columns>
                                </xcdg:DataGridControl>
                            </xcad:LayoutAnchorable>
                        </xcad:LayoutAnchorablePane>
                        <xcad:LayoutAnchorablePane>
                            <xcad:LayoutAnchorable ContentId="Entities" Title="Entities" >
                                <RichTextBox>
                                    <FlowDocument>
                                        <Paragraph FontSize="14" FontFamily="Segoe">
                                            This is the content of the Journal Pane.
                                            <LineBreak/>
                                            A
                                            <Bold>RichTextBox</Bold> has been added here
                                        </Paragraph>
                                    </FlowDocument>
                                </RichTextBox>
                            </xcad:LayoutAnchorable>

                        </xcad:LayoutAnchorablePane>
                    </xcad:LayoutAnchorablePaneGroup>
                </xcad:LayoutPanel>
            </xcad:LayoutRoot>
        </xcad:DockingManager>

    </Grid>
</Window>
